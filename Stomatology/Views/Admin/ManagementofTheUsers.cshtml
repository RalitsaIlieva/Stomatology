@model IEnumerable<Stomatology.Data.Appointment>

@{
    ViewData["Title"] = "ManagementofTheUsers";
}

<h1>Управление на потребителите</h1>

@foreach (var item in @Model)
{
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Име</th>
                    <th>Фамилия</th>
                    <th>ЕГН</th>
                    <th>Дата</th>
                    <th>Час</th>
                    <th>Действие</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@item.User.FirstName</td>
                    <td>@item.User.LastName</td>
                    <td>@item.User.EGN</td>
                    <td>@item.Date.Day.@item.Date.Month.@item.Date.Year</td>
                    <td>@item.Hour</td>
                    <td>
                        <form asp-action="DeleteAppointment" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-outline-secondary">Изтрий</button>
                        </form>
                        <form asp-action="EditAppointment" asp-route-id="@item.Id" method="get">
                            <button type="submit" class="btn btn-outline-secondary">Промени</button>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
  
}

