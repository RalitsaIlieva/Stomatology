@model IEnumerable<Stomatology.Data.Service>

@{
    ViewData["Title"] = "Management";
}

<h1>Нашите услуги</h1>

<
@foreach (var item in @Model)
{
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Услуга</th>
                    <th>Цена</th>
                    <th>Действие</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>
                        <div class="btn-group-vertical">
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-outline-secondary">Изтрий</button>
                        </form>
                        <form asp-action="Edit" asp-route-id="@item.Id" method="get">
                            <button type="submit" class="btn btn-outline-secondary">Промени</button>
                        </form>
                            </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
<form asp-action="Create" method="get">
    <div class="row justify-content-center">
        <button type="submit" class="btn btn-outline-secondary">Добави нова услуга</button>
</form>
